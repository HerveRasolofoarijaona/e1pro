extends simple-layout

block content
    //.alert-danger.alert-dismissible
    div.col-md-3.form-box-login
        a(href="/")
            img(src="/images/emploi1pro-logo_small.png")
        div
            form(class="form-default" role="form" action="" method="post")
                p Vous allez reçevoir un e-mail de confirmation, si ce n'est pas le cas introduire votre adresse e-mail
                    | un lien pour renvoyer un e-mail de confirmation.
                    -if(errors.length > 0)
                        div.alert.alert-danger.alert-dismissible
                            button.close(type="button", data-dismiss="alert", aria-label="Close" style="font-size:12px; text-align:center")
                                span(aria-hidden="true") &times;
                                = errors
                    -if(success.length > 0)
                        div.alert.alert-success.alert-dismissible
                            button.close(type="button", data-dismiss="alert", aria-label="Close" style="font-size:12px; text-align:center")
                                span(aria-hidden="true") &times;
                                = success
                div
                    input(type="email" name="email" placeholder="Email")
                div
                    input(type="submit" class="submit-btn" value="Renvoyer un email")
                            